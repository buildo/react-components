{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "typings"]
}
