{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "jsx": "react"
  },
  "include": [".", "../../src/**/*", "../../typings"]
}
