{
  "name": "buildo-react-components",
  "version": "0.23.0",
  "description": "Collection of general React components used in buildo projects.",
  "main": "lib",
  "scripts": {
    "test": "jest",
    "test-dev": "jest --watch",
    "build": "rm -rf lib && mkdir lib && node-sass src --importer sass-importer.js --include-path node_modules -o lib && babel src -d lib",
    "lint": "scriptoni lint src showroom test",
    "lint-fix": "scriptoni lint --fix src showroom test",
    "lint-style": "scriptoni lint-style \"src/**/*.scss\" \"showroom/**/*.scss\"",
    "lint-style-fix": "scriptoni stylefmt --recursive src/**/*.scss showroom/**/*.scss",
    "postinstall": "./ghDepsInstall.sh",
    "preversion": "npm run lint && npm run lint-style && npm run test",
    "prepublish": "npm run build",
    "build-examples": "rm -rf examples/build && webpack --config examples/webpack.config.build.js --progress",
    "start": "./npm-start.sh",
    "showroom": "NODE_ENV=test-showroom webpack-dev-server --config showroom/webpack.config.babel.js --progress --hot --inline",
    "build-showroom": "rm -rf ./showroom/build && webpack --config showroom/webpack.config.build.babel.js --progress && cp ./showroom/build/index.html ./index.html",
    "deploy-showroom": "./deployShowroom.sh",
    "generate-all-readmes": "babel-node ./generateReadmes.js",
    "release-version": "smooth-release --validations --npm-version --npm-publish"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:buildo/react-components"
  },
  "keywords": [],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buildo/react-components/issues"
  },
  "files": [
    "lib",
    "src",
    "ghDepsInstall.sh"
  ],
  "homepage": "https://github.com/buildo/react-components",
  "dependencies": {
    "bowser": "^1.0.0",
    "classnames": "^2.2.3",
    "create-react-class": "^15.5.2",
    "css-element-queries": "^0.3.2",
    "fixed-data-table-2": "^0.7.6",
    "gemini-scrollbar": "^1.4.3",
    "linkify-it": "^2.0.3",
    "lodash": "^4.6.1",
    "mobile-detect": "^1.2.1",
    "react-addons-transition-group": "^0.14 || ^15",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-flexview": "1.0.6",
    "react-input-children": "1.0.1",
    "react-select": "1.0.0-rc.3",
    "revenge": "^0.4.2",
    "sass-flex-mixins": "^0.1.0",
    "tcomb-react": "^0.9.0",
    "tlds": "^1.185.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.21.0",
    "babel-jest": "^20.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-buildo": "^0.1.1",
    "babel-register": "^6.11.6",
    "buildo-normalize-css": "^3.0.1",
    "component-playground": "^1.2.0",
    "compression-webpack-plugin": "^0.4.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.4.1",
    "eslint-loader": "^1.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faker": "^3.1.0",
    "file-loader": "^0.11.0",
    "html-webpack-plugin": "^2.24.1",
    "jest": "^19.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "4.5.2",
    "raw-loader": "^0.5.1",
    "react": "15.4.x",
    "react-addons-test-utils": "15.4.x",
    "react-dom": "15.4.x",
    "react-readme-generator": "0.0.1",
    "react-remarkable": "^1.1.1",
    "react-router": "^0.13.5",
    "react-test-renderer": "15.4.x",
    "sass-loader": "^4.1.0",
    "scriptoni": "^0.6.2",
    "smooth-release": "^8.0.0",
    "style-loader": "^0.17.0",
    "stylelint-webpack-plugin": "^0.7.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15",
    "react-dom": "^0.14 || ^15"
  },
  "greenkeeper": {
    "ignore": [
      "fixed-data-table",
      "react-router",
      "webpack",
      "webpack-dev-server",
      "sass-loader",
      "babel-loader"
    ]
  }
}
